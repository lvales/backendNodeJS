<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="row">
                <h2 class="mt-3">Productos disponibles</h2>
                <hr>
                <div class="vh-50 overflow-auto">
                    {{#each productos}}
                    <div class="card m-2" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ this.title }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Codigo: {{ this.code }}</h6>
                            <h6 class="card-subtitle mb-2 text-muted">Precio: ${{ this.price }} </h6>
                            <p class="card-text">{{ this.description }}</p>
                        </div>
                    </div>
                    {{/each}}
                    <div id="card"></div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="row">
                <h2 class="mt-3">Formulario de alta</h2>
                <hr>
                <form id="productForm">
                    <input type="text" id="title" name="title" placeholder="Nombre del producto"
                        class="form-control my-2">
                    <input type="text" id="description" name="description" placeholder="Descripción"
                        class="form-control my-2">
                    <input type="numbre" id="code" name="code" placeholder="Código" class="form-control mb-2">
                    <input type="number" id="price" name="price" placeholder="Precio" class="form-control mb-2">
                    <input type="number" id="stock" name="stock" placeholder="Stock" class="form-control mb-2">
                    <input type="text" id="category" name="category" placeholder="Categoria" class="form-control mb-2">
                    <input type="file" id="thumbnail" name="thumbnail" class="form-control my-2">
                    <input id="add" class="btn btn-success" value="Agregar proucto">
                </form>
            </div>
        </div>
    </div>


</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/assets/js/websocket.js"></script>